{% extends 'base.html.twig' %}


{% block title %}{{data.location.name}}
{% endblock %}

{% block body %}
	<div id="Results">
		<div class="container d-flex flex-column justify-content-around align-items-center mt-5 bg-primary rounded" id="weatherBox">
			<h2 class="text-white">{{data.location.name}}
			</h2>
			<h3 class="text-secondary">{{data.location.country}}
				-
				{{data.location.region}}</h3>
			<h3 class="text-secondary">{{data.current.temp_c}}°</h3>
			<img src="{{data.current.condition.icon}}" alt="icon" id="weatherIcon">
			<h5>
				{{data.current.condition.text}}
			</h5>
			<h5>Ressenti :
				{{data.current.feelslike_c}}°</h5>
			<h5>Couverture nuageuse :
				{{data.current.cloud}}%</h5>
			<h5>Humidité :
				{{data.current.humidity}}%</h5>
		</div>
		<p class="text-muted text-center mt-2">Dernière actualisation :
			{{data.current.last_updated_epoch|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY H:mm")}}</p>
	</div>
{% endblock %}
